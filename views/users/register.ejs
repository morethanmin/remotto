    <form action="/register" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label class="form-label" for="username">아이디</label>
            <input class="form-control" type="text" id="username" name="username" autofocus required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">이메일</label>
            <input class="form-control" type="email" id="email" name="email" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">비밀번호</label>
            <input class="form-control" type="password" id="password" name="password" required>
        </div>
        <div class="mb-3">
            <!-- <a href="" >아이디, 비밀번호를 모르겠어요.</a> -->
            <a href="login" >로그인으로 돌아가기</a>
        </div>
        <button class="btn btn-success btn-block">회원가입</button>
    </form>
    
</div>
